<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/app_nav_graph"
    app:startDestination="@id/splashFragment">

    <fragment
        android:id="@+id/splashFragment"
        android:name="com.ahmedabdelmohsen.mytasks.main.destinations.SplashFragment"
        android:label="fragment_splash"
        tools:layout="@layout/fragment_splash">
        <action
            android:id="@+id/action_splashFragment_to_homeFragment"
            app:destination="@id/homeFragment"
            app:enterAnim="@anim/slide_in_up"
            app:exitAnim="@anim/slide_out_down"
            app:popEnterAnim="@anim/slide_in_down"
            app:popExitAnim="@anim/slide_out_up"
            app:popUpTo="@id/splashFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.ahmedabdelmohsen.mytasks.main.destinations.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_homeFragment_to_menuFragment"
            app:destination="@id/menuFragment"
            app:enterAnim="@anim/slide_in_left"
            app:exitAnim="@anim/slide_out_right"
            app:popEnterAnim="@anim/slide_in_right"
            app:popExitAnim="@anim/slide_out_left" />
    </fragment>
    <fragment
        android:id="@+id/menuFragment"
        android:name="com.ahmedabdelmohsen.mytasks.main.destinations.MenuFragment"
        android:label="fragment_menu"
        tools:layout="@layout/fragment_menu" />
    <fragment
        android:id="@+id/thisWeekFragment"
        android:name="com.ahmedabdelmohsen.mytasks.main.destinations.ThisWeekFragment"
        android:label="fragment_this_week"
        tools:layout="@layout/fragment_this_week" />
    <fragment
        android:id="@+id/todayFragment"
        android:name="com.ahmedabdelmohsen.mytasks.main.destinations.TodayFragment"
        android:label="fragment_today"
        tools:layout="@layout/fragment_today" />
    <activity
        android:id="@+id/editActivity"
        android:name="com.ahmedabdelmohsen.mytasks.EditActivity"
        android:label="activity_edit"
        tools:layout="@layout/activity_edit" />
    <fragment
        android:id="@+id/tomorrowFragment"
        android:name="com.ahmedabdelmohsen.mytasks.main.destinations.TomorrowFragment"
        android:label="fragment_tomorrow"
        tools:layout="@layout/fragment_tomorrow" />
    <activity
        android:id="@+id/mainActivity"
        android:name="com.ahmedabdelmohsen.mytasks.MainActivity"
        android:label="activity_main"
        tools:layout="@layout/activity_main" />
</navigation>